@model IEnumerable<PaymentIndexViewModel>

@{
    ViewBag.Title = "Payment";
}
<div class="row">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Payment List</li>
                </ol>
                            <select class="form-control">
                            @foreach (var item in Model)
                                    {
                                            <option>@item.Emloyee.FullName</option>
                                    }
                            </select>
            </nav><br />
            <div class="row">
                
              
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Pay Date</th>
                            <th>Pay Month</th>
                            <th>Year</th>
                            <th>Total Earnings</th>
                            <th>Total Deduction</th>
                            <th>Net Payment</th>
                            <th class="text-warning">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a class="text-success"
                                   asp-controller="Employee"
                                   asp-action="Detail"
                                   asp-route-id="@item.Emloyee.Id">@item.Emloyee.FullName</a>
                                </td>
                                <td>
                                    @item.PayDate
                                </td>
                                <td>
                                    @item.PayMonth
                                </td>
                                <td>
                                    @item.Year
                                </td>
                                <td>
                                    @item.TotalEarnings
                                </td>
                                <td>@item.TotalDeduction</td>
                                <td>@item.NetPayment</td>
                                <td>
                                    <a class="text-primary"
                                   asp-controller="Employee"
                                   asp-action="Detail"
                                   asp-route-id="@item.Id"><i class="fas fa-bars"></i>Detail</a>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>